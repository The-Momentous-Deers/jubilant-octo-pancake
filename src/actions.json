{
    "manifest": {
        "displayName": "railsbank assistant",
        "invocationName": "railsbank assistant",
        "category": "PRODUCTIVITY"
    },
    "actions": [
        {
            "name": "com.tmd.actions.RailsbankAssistant.GetBalance",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.tmd.intents.RailsbankAssistant.GetBalance",
                "trigger": {
                    "queryPatterns": [
                        "get my balance"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Getting your balance now"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.tmd.commands.RailsbankAssistant.GetBalance"
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}
